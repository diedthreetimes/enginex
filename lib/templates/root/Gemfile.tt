source "http://rubygems.org"

gem "rails", "<%= ActiveSupport::VERSION::STRING %>"
gem "sqlite3"


group :test, :development do
  gem "rake"
  gem "capybara", ">= 0.4.0"

  <%- if rdoc? %>
  gem "rdoc"
  <% end %>

  <%- if rspec? %>
  gem "rspec-rails", ">= 2.0.0.beta"
  <% end -%>
end

